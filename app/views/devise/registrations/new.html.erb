<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :username, 'Username' %>
    <%= f.text_field :username, required: true, maxlength: 15, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name, 'Your name' %>
    <%= f.text_field :name, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email, class: "form-control", required: true%>
  </div>
  

  <div class="field">
    <%= f.label :password, "Password" %>
    <%= f.password_field :password, class: "form-control mb-4", required: true, pattern: '(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).*', title: 'Password must contain atleast one uppercase, lowercase and number' %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign Up", class: 'btn btn-dark btn-block btn-lg' %>
  </div>

<% end %>


